.doctor-list{height:480rpx;padding-top:20rpx;background-color:#f6f7f9}.doctor-list-header{display:flex;align-items:center;height:60rpx;padding:0 15rpx 0 30rpx;margin-bottom:10rpx;font-size:28rpx}.doctor-list-header .title{color:#121826;flex:1}.doctor-list-header .more{color:#c3c3c5}.doctor-list-wrapper{display:flex;width:1500rpx;padding-right:30rpx}.doctor-list-item{display:flex;flex-direction:column;align-items:center;width:270rpx;height:380rpx;padding:30rpx;margin-left:30rpx;box-sizing:border-box;border-radius:20rpx;background-color:#fff}.doctor-list-item .doctor-avatar{width:120rpx;height:120rpx;border-radius:50%;margin-bottom:20rpx}.doctor-list-item .name{font-size:26rpx;color:#121826}.doctor-list-item .unit,.doctor-list-item .level{width:100%;font-size:24rpx;text-align:center;color:#c3c3c5;text-overflow:ellipsis;overflow:hidden;white-space:nowrap}.doctor-list-item .follow{width:150rpx;height:58rpx;text-align:center;line-height:58rpx;margin-top:20rpx;font-size:24rpx;border-radius:60rpx;color:#fff;background-color:#16c2a3}
