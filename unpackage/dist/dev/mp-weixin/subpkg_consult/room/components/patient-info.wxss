.patient-info {
  padding: 30rpx;
  margin-top: 60rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.patient-info .header {
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ededed;
}
.patient-info .header .title {
  font-size: 32rpx;
  color: #121826;
  margin-bottom: 10rpx;
}
.patient-info .header .note {
  font-size: 26rpx;
  color: #848484;
}
.patient-info .content {
  margin-top: 20rpx;
  font-size: 26rpx;
}
.patient-info .content .list-item {
  display: flex;
  margin-top: 10rpx;
}
.patient-info .content .label {
  width: 130rpx;
  color: #3c3e42;
}
.patient-info .content .note {
  flex: 1;
  line-height: 1.4;
  color: #848484;
}