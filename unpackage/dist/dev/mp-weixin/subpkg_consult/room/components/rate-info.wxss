.doctor-rating {
  padding: 30rpx 30rpx 40rpx;
  border-radius: 20rpx;
  background-color: #fff;
  margin-top: 60rpx;
}
.doctor-rating .title {
  text-align: center;
  font-size: 30rpx;
  color: #121826;
}
.doctor-rating .subtitle {
  text-align: center;
  font-size: 24rpx;
  color: #6f6f6f;
  margin: 10rpx 0 20rpx;
}
.doctor-rating .rating {
  display: flex;
  justify-content: center;
}
.doctor-rating .text {
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
  background-color: #f6f6f6;
  border-radius: 20rpx;
  position: relative;
}
.doctor-rating .uni-easyinput__content-textarea {
  font-size: 28rpx;
}
.doctor-rating .word-count {
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  line-height: 1;
  font-size: 24rpx;
  color: #6f6f6f;
}
.doctor-rating .anonymous {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0;
  color: #6f6f6f;
  font-size: 24rpx;
}
.doctor-rating .anonymous .label {
  margin-left: 6rpx;
}
.doctor-rating .uni-button[disabled] {
  color: #a6dbd5;
  background-color: #eaf8f6;
}