 .uni-section-header {
  font-weight: 500 !important;
  padding-left: 30rpx !important;
  padding-bottom: 0 !important;
}
 .uni-section-content {
  padding-top: 0 !important;
  padding-bottom: 0 !important;
}
 .uni-list-item__container {
  padding-left: 0 !important;
  padding-right: 0 !important;
}
 .uni-list-item__content-title {
  font-size: 32rpx !important;
  color: #3c3e42 !important;
}
 .uni-list-item__extra-text {
  font-size: 32rpx !important;
  color: #3c3e42 !important;
}
 .uni-list-item__content-note {
  font-size: 28rpx !important;
}
 .uni-list-item__icon {
  margin-right: 0 !important;
}
 .uni-icon-wrapper {
  padding: 0 !important;
  margin-right: -10rpx !important;
  font-size: 36rpx !important;
}
.dividing-line {
  height: 30rpx;
  background-color: #f6f6f6;
}
.uni-list-text-red {
  color: #eb5757;
}
.uni-list-text-gray {
  color: #848484;
  font-size: 30rpx;
}
.payment-agreement {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}
.payment-agreement .uni-radio-input {
  transform: scale(0.9);
  margin-right: 0 !important;
}
.payment-agreement radio {
  transform: scale(0.7);
  margin-right: -5rpx !important;
}
.next-step {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 30rpx 40rpx calc(env(safe-area-inset-bottom) + 30rpx);
  background-color: #fff;
}
.next-step .uni-button {
  width: 400rpx;
}
.next-step .total-amount {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #3c3e42;
}
.next-step .number {
  font-size: 40rpx;
  color: #eb5757;
  margin-left: 10rpx;
}