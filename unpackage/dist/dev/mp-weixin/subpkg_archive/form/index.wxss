.archive-page {
  padding: 30rpx;
}
.archive-page .uni-forms-item {
  padding-top: 30rpx !important;
  padding-bottom: 20rpx !important;
}
.archive-page .uni-forms-item__label {
  font-size: 32rpx;
  color: #3c3e42;
}
.archive-page .uni-forms-item--border {
  border-top: none;
  border-bottom: 1rpx solid #ededed;
}
.archive-page .uni-easyinput__content-input {
  height: 36px;
}
.archive-page .checklist-text {
  font-size: 32rpx !important;
  margin-left: 20rpx !important;
}
.archive-page .uni-forms-item__error {
  position: absolute !important;
  left: -220rpx !important;
  right: 0 !important;
  top: auto !important;
  padding-top: 10rpx !important;
  margin-top: 20rpx;
  border-top: 2rpx solid #eb5757;
  color: #eb5757;
  font-size: 24rpx;
  transition: none;
}
.archive-page .uni-data-checklist {
  display: flex;
  height: 100%;
  padding-left: 10px;
}
.archive-page .radio__inner {
  transform: scale(1.25);
}
.archive-page .checkbox__inner {
  transform: scale(1.25);
}
.uni-switch {
  display: flex;
  align-items: center;
  height: 100%;
}
.uni-button {
  margin-top: 60rpx;
}