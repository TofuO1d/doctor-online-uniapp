.user-login {
  padding: 60rpx;
}
.login-type {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  line-height: 1;
  margin: 40rpx 0 80rpx;
}
.login-type .title {
  font-size: 48rpx;
  color: #121826;
}
.login-type .type {
  color: #3c3e42;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
.social-login {
  margin-top: 100rpx;
  padding: 0 60rpx;
}
.social-login .legend {
  height: 40rpx;
  position: relative;
  border-top: 1rpx solid #ebebeb;
}
.social-login .text {
  position: absolute;
  top: -50%;
  left: 50%;
  font-size: 28rpx;
  color: #999;
  padding: 0 10rpx;
  background-color: #fff;
  transform: translate(-50%);
}
.social-login .social-account {
  display: flex;
  justify-content: space-evenly;
  margin-top: 40rpx;
}
.social-login .social-account .icon {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  border-radius: 100rpx;
  background-color: #f6f6f6;
}