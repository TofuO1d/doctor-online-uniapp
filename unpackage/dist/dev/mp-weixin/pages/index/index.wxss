.index-page {
  min-height: 260rpx;
  background-image: url(https://consult-patient.oss-cn-hangzhou.aliyuncs.com/static/images/index-page-header-bg.png);
  background-size: contain;
  background-repeat: no-repeat;
}
.page-navbar {
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 30rpx;
  font-size: 34rpx;
  color: #fff;
}
.search-bar {
  height: 80rpx;
  padding: 0 30rpx;
  margin-top: 10rpx;



  position: relative;
}
.search-bar .input {
  height: 100%;
  padding-left: 80rpx;
  padding-right: 40rpx;
  border-radius: 80rpx;
  background-color: #fff;
  font-size: 26rpx;
  color: #3c3e42;
  box-shadow: 0px 10rpx 22rpx rgba(0, 0, 0, 0.1);
}
.search-bar .input-placeholder {
  color: #979797;
}
.search-bar .icon-search {
  position: absolute;
  top: 50%;
  transform: translate(24rpx, -50%);
  margin-top: 2rpx;
}
.quick-entry {
  display: flex;
  justify-content: space-around;
  line-height: 1;
  padding: 50rpx 30rpx 40rpx;
}
.quick-entry-item {
  display: flex;
  align-items: center;
  flex-direction: column;
}
.quick-entry .label {
  margin: 20rpx 0 10rpx;
  font-size: 28rpx;
  color: #121826;
}
.quick-entry .small {
  font-size: 22rpx;
  color: #848484;
}
.quick-entry-icon {
  width: 92rpx;
  height: 92rpx;
}
.quick-view {
  display: flex;
  justify-content: space-around;
  line-height: 1;
  padding: 10rpx 30rpx;
}
.quick-view-item {
  display: flex;
  align-items: center;
  flex-direction: column;
}
.quick-view .label {
  margin: 20rpx 0 10rpx;
  font-size: 28rpx;
  color: #121826;
}
.quick-view-icon {
  width: 62rpx;
  height: 62rpx;
}
.banner-placeholder {
  height: 200rpx;
  padding: 0 30rpx;
  margin: 20rpx 0;
  position: relative;
  z-index: 101;
}
.banner-placeholder .uni-swiper {
  height: 200rpx;
}
.banner-placeholder .banner-image {
  width: 100%;
  height: 200rpx;
}