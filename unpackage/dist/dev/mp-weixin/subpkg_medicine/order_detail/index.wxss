.medicine-page {
  padding-bottom: calc(env(safe-area-inset-bottom) + 155rpx);
}
.page-header {
  padding: 20rpx 30rpx 30rpx;
  background-color: #eaf8f6;
  overflow: hidden;
}
.page-header .order-status {
  display: flex;
  justify-content: space-between;
  line-height: 1;
  padding: 30rpx 0 0 6rpx;
  font-size: 32rpx;
}
.page-header .order-status .label {
  color: #121826;
}
.page-header .order-status .status {
  color: #16c2a3;
}
.page-header .order-shippment {
  line-height: 1;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 40rpx;
  position: relative;
}
.page-header .order-shippment .region {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #6f6f6f;
}
.page-header .order-shippment .icon-location {
  color: #ff7702;
  font-size: 28rpx;
  margin-right: 5rpx;
}
.page-header .order-shippment .detail {
  margin: 24rpx 0;
  font-size: 34rpx;
  color: #121826;
}
.page-header .order-shippment .receiver {
  font-size: 26rpx;
  color: #121826;
}
.page-header .order-shippment .marker {
  font-size: 28rpx;
  color: #16c2a3;
}
.page-header .order-shippment .datetime {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #c3c3c5;
}
.page-header .order-shippment .arrow {
  position: absolute;
  top: 50%;
  right: 16rpx;
  transform: translateY(-50%);
}
.order-shop {
  padding: 20rpx 30rpx;
  margin: 10rpx 0;
  line-height: 1;
  font-size: 32rpx;
  color: #121826;
  font-weight: 500;
}
.order-shop .alt {
  font-size: 24rpx;
  color: #979797;
  margin-left: 10rpx;
}
.medicine-list {
  padding: 0 30rpx;
  background-color: #fff;
}
.medicine-list-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #ededed;
  position: relative;
}
.medicine-list-item:last-child {
  border-bottom: none;
}
.medicine-list-item .medicine-cover {
  width: 180rpx;
  height: 160rpx;
  float: left;
}
.medicine-list-item .medicine-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 160rpx;
  padding-left: 20rpx;
}
.medicine-list-item .medicine-info .name {
  font-size: 30rpx;
  font-weight: 500;
  color: #121826;
}
.medicine-list-item .medicine-info .unit {
  color: #979797;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}
.medicine-list-item .medicine-info .unit.symbol::before {
  content: "处方药";
  line-height: 1;
  padding: 8rpx 10rpx;
  margin-right: 10rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #16c2a3;
}
.medicine-list-item .medicine-info .price {
  color: #eb5757;
  font-size: 32rpx;
}
.medicine-list-item .quantity {
  top: 30rpx;
  right: 0;
  position: absolute;
  font-size: 30rpx;
  color: #121826;
}
.medicine-list-item .guide {
  clear: both;
  padding: 20rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #848484;
  border-radius: 10rpx;
  background-color: #f6f6f6;
}
.order-info {
  padding: 0 30rpx;
  margin-top: 30rpx;
  background-color: #fff;
}
.order-info .right-text {
  display: flex;
  align-items: center;
}
.order-info .copy {
  line-height: 1;
  padding: 6rpx 20rpx 4rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
  color: #16c2a3;
  background-color: #fafafa;
  border-radius: 40rpx;
  border: 1rpx solid #16c2a3;
}
.order-info .number {
  font-size: 32rpx;
  color: #848484;
}
.order-info .uni-list-item__container {
  padding-left: 0 !important;
  padding-right: 0 !important;
}
.order-info .uni-list-item__content-title {
  font-size: 32rpx !important;
  color: #3c3e42 !important;
}
.order-info .uni-list-item__extra-text {
  font-size: 32rpx !important;
  color: #848484 !important;
}
.order-info .uni-icon-wrapper {
  padding: 0 !important;
  margin-right: -10rpx !important;
  font-size: 36rpx !important;
  margin-top: 2rpx;
}
.notice-bar {
  text-align: center;
  margin-top: 30rpx;
  position: -webkit-sticky;
  position: sticky;
  bottom: calc(env(safe-area-inset-bottom) + 145rpx);
}
.toolbar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  height: 88rpx;
  padding: 30rpx 40rpx calc(env(safe-area-inset-bottom) + 30rpx);
  background-color: #fff;
}
.toolbar .buttons {
  flex: 1;
  display: flex;
}
.toolbar .delete-botton {
  display: flex;
  flex-direction: column;
  color: #848484;
  text-align: center;
  font-size: 24rpx;
  margin: 0 60rpx 0 30rpx;
}
.toolbar .uni-button {
  flex: 1;
  padding: 0 30rpx;
}
.toolbar .uni-button.minor {
  color: #16c2a3;
  margin-right: 20rpx;
  border: 1rpx solid #ededed;
  background-color: #fafafa;
}
.toolbar .total-amount {
  display: flex;
  align-items: center;
  width: 270rpx;
  font-size: 28rpx;
  color: #3c3e42;
}
.toolbar .number {
  font-size: 40rpx;
  color: #eb5757;
  margin-left: 10rpx;
}