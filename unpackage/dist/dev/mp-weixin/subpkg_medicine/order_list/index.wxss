.medicine-page {
  height: 100vh;



  background-color: #f6f6f6;
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 20rpx);
  display: flex;
  flex-direction: column;
}
.order-status-tabs {
  padding: 20rpx 30rpx 0;
  background-color: #fff;
}
.order-status-tabs .custom-tabs {
  justify-content: space-evenly;
}
.uni-scroll-view {
  flex: 1;
  overflow: hidden;
  padding-top: 15rpx;
}
.order-list {
  padding: 15rpx 30rpx 30rpx;
}
.order-list-item {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  background-color: #fff;
}
.order-list-item .order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
  margin: 0 -30rpx;
  font-size: 26rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.order-list-item .order-header .number {
  color: #848484;
}
.order-list-item .order-header .status {
  color: #f2994a;
}
.order-list-item .medicine {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  position: relative;
}
.order-list-item .medicine .medicine-cover {
  width: 180rpx;
  height: 160rpx;
  float: left;
}
.order-list-item .medicine .medicine-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 160rpx;
  padding-left: 20rpx;
}
.order-list-item .medicine .medicine-info .name {
  font-size: 30rpx;
  font-weight: 500;
  color: #121826;
}
.order-list-item .medicine .medicine-info .unit {
  color: #979797;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}
.order-list-item .medicine .medicine-info .unit.symbol::before {
  content: "处方药";
  line-height: 1;
  padding: 8rpx 10rpx;
  margin-right: 10rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #16c2a3;
}
.order-list-item .medicine .medicine-info .price {
  color: #eb5757;
  font-size: 32rpx;
}
.order-list-item .medicine .quantity {
  top: 30rpx;
  right: 0;
  position: absolute;
  font-size: 30rpx;
  color: #121826;
}
.order-list-item .order-footer {
  padding: 30rpx 0;
}
.order-list-item .order-footer .total {
  text-align: right;
  font-size: 24rpx;
  color: #3c3e42;
}
.order-list-item .order-footer .buttons {
  display: flex;
  justify-content: flex-end;
  padding-top: 20rpx;
}
.order-list-item .order-footer .uni-button {
  height: 60rpx;
  line-height: 60rpx;
  margin: 20rpx 0 0 30rpx;
  font-size: 26rpx;
  color: #16c2a3;
  border: 1rpx solid #16c2a3;
  background-color: #fff;
}
.order-list-item .order-footer .uni-button.minor {
  color: #3c3e42;
  border-color: #ededed;
  background-color: #f6f6f6;
}